//  整屏swiper样式问题
.all-screen-swiper {
  position fixed
  top 0
  left 0
  right 0
  height 990px
  overflow hidden
  .content-outer-wrapper {
    position absolute
    top 0
    bottom 0
    width 100%
    .swiper-wrapper {
      height 100%
      .item-wrapper {
        height 100%
        background-size cover
        background-position center center
        display flex
        flex-direction column
        .content-wrapper {
          flex 1
          position relative
        }
      }
    }
  }
}

@media screen and (max-width: 1440px) {
  .all-screen-swiper {
    height 880px
    .inner-box, .inner-wrapper {
      transform-origin center
      transform scale(0.8)
    }
    .scrollbar-wrapper {
      transform-origin center right
      transform scale(0.8)
    }
  }
}

@media screen and (max-width: 1280px) {
  .all-screen-swiper {
    height 700px
    .inner-box, .inner-wrapper {
      transform-origin center
      transform scale(0.7)
    }
    .scrollbar-wrapper {
      transform-origin center right
      transform scale(0.7)
    }
  }
}
